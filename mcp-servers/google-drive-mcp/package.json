        "uuid": "^11.0.3",
        "zod": "^3.25.76"
    },
    "devDependencies": {
        "@types/node": "^22.9.3",
        "@types/uuid": "^10.0.0",
        "esbuild": "^0.25.8",
        "shx": "^0.3.4",
        "typescript": "^5.6.2"
    }
